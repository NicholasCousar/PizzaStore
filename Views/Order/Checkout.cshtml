@model Order
<style>
.div-overflow
    {
        position:relative;
    }
</style>
<h2>Checkout now</h2>
<p>Please enter in your details, and we'll take care of the rest!</p>
<div asp-validation-summary="All" class="text-danger"></div>
<form asp-action="Checkout" method="post">
    <div class="div-overflow" style="padding-bottom:50px">
        <h3>Payment Information</h3>
        <div class="form-group">
            <label>Credit card Number:</label>
            <input asp-for="CardNumber" class="form-control" />
        </div>
        <div class="form-group">
            <label>Expiration Month:</label>
            <input asp-for="EMonth" class="form-control" />
        </div>
        <div class="form-group">
            <label>Expiration Year:</label>
            <input asp-for="EYear" class="form-control" />
        </div>
        <div class="form-group">
            <label>CVV:</label>
            <input asp-for="CVV" class="form-control" />
        </div>
        <h3>Ship to</h3>
        <div class="form-group">
            <label>Name:</label>
            <input asp-for="Name" class="form-control" />
        </div>
        <h3>Address</h3>
        <div class="form-group">
            <label>Primary Address:</label>
            <input asp-for="Line1" class="form-control" />
        </div>
        <div class="form-group">
            <label>Secondary Address 1:</label>
            <input asp-for="Line2" class="form-control" />
        </div>
        <div class="form-group">
            <label>Secondary Address 2:</label>
            <input asp-for="Line3" class="form-control" />
        </div>
        <div class="form-group">
            <label>City:</label>
            <input asp-for="City" class="form-control" />
        </div>
        <div class="form-group">
            <label>State:</label>
            <input asp-for="State" class="form-control" />
        </div>
        <div class="form-group">
            <label>Zip:</label>
            <input asp-for="Zip" class="form-control" />
        </div>
        <div class="form-group">
            <label>Country:</label>
            <input asp-for="Country" class="form-control" />
        </div>
        <div class="checkbox">
            <label>
                <input asp-for="GiftWrap" /> GiftWrap Your Order
            </label>
        </div>
        <div class="text-center">
            <input class="btn btn-primary" type="submit" value="Complete Order" />
        </div>
    </div>
</form>