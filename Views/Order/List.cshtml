@model IEnumerable<Order>

@{
    ViewBag.Title = "Orders";
    Layout = "_AdminLayout";
}

@if (Model.Count() > 0)
{
    <table class="table table-bordered table-striped">
        <tr>
            <th>Name</th>
            <th>Zip</th>
            <th colspan="2">Details</th>
            <th></th>
        </tr>
        @foreach (Order q in Model)
        {
            <tr>
                <td>@q.Name</td>
                <td>@q.Zip</td>
                <th>Product</th>
                <th>Quantity</th>
                <td>
                    <form asp-controller="Order" asp-action="MarkShipped" method="post">
                        <!--Keeps on only passing 0-->
                        <button type="submit" value="submit" class="btn btn-sm btn-danger">Ship</button>
                        <input type="hidden" name="orderID" value="@q.OrderID" />
                    </form>
                </td>
            </tr>
            @foreach (CartLine line in q.Lines)
            {
                <tr>
                    <td colspan="2"></td>
                    <td>@line.Product.Name</td>
                    <td>@line.Quantity</td>
                    <td></td>
                </tr>
            }
        }
</table>
}
else
{
    <div class="text-center">No Unshipped Orders</div>
}