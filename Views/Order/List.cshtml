@model IEnumerable<Order>

@{
    ViewBag.Title = "Orders";
    Layout = "_AdminLayout";
}

@if (Model.Count() > 0)
{
    <table class="table table-bordered table-striped">
        <tr>
            <th>Name</th>
            <th>Zip</th>
            <th colspan="2">Details</th>
        </tr>
        

        @foreach (Order q in Model)
        {
            @if (q.Shipped == false)
            {
            <tr>
                <td>@q.Name</td>
                <td>@q.Zip</td>
                <th>Product</th>
                <th>Quantity</th>
            </tr>

            @foreach (CartLine line in q.Lines)
            {
                <tr>
                    <td colspan="2"></td>
                    <td>@line.Product.Name</td>
                    <td>@line.Quantity</td>
                </tr>
            }
            }
        }
</table>
}
else
{
    <div class="text-center">No Unshipped Orders</div>
}