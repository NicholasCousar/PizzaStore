@model IEnumerable<string>
<a class="btn btn-outline-dark btn-block m-2"
   asp-action="List"
   asp-controller="Product"
   asp-route-category="">
    Home
</a>

<a class="btn btn-outline-dark btn-block m-2"
   asp-action="Index"
   asp-controller="FAQ"
   asp-route-category="">
    FAQ
</a> <!--Semi Functional-->

@foreach (string category in Model)
{<a class="btn btn-block m-2
    @(category == ViewBag.SelectedCategory ? "btn-primary" : "btn-outline-dark")"
    asp-action="List"
    asp-controller="Product"
    asp-route-category="@category"
    asp-route-page="1">
        @category
    </a>
}
